#!/bin/sh
rm -rf "${ctmp}"

svwaitup
echo $?
svwaitup -V
echo $?

mkdir "${ctmp}"
echo '#!/bin/sh' >"${ctmp}"/run
echo 'echo starting' >>"${ctmp}"/run
echo 'exec sleep 14' >>"${ctmp}"/run
chmod 700 "${ctmp}"/run
runsv "${ctmp}" &
sleep 1
test -r "${ctmp}"/supervise/stat || sleep 2
svwaitup "${ctmp}"
echo $?
cat "${ctmp}"/supervise/stat
svwaitup -s2 "${ctmp}"
echo $?
cat "${ctmp}"/supervise/stat
runsvctrl exit "${ctmp}"
wait
echo $?
chpst -2 svwaitup -s2 "${ctmp}"
echo $?
rm -rf "${ctmp}"
