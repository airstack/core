{
  "services": {
    "haproxy": {
      "install":"apt-get update; apt-get install -o Dpkg::Options::=--force-confdef -o Dpkg::Options::=--force-confold --no-install-recommends --no-install-suggests -y haproxy",
      "enable": "rm -vf /etc/haproxy/haproxy.cfg; ln -sf /etc/airstack/haproxy/haproxy.cfg /etc/haproxy/",
      "disable": "",
      "run": "exec chpst -u root /usr/sbin/haproxy -db -f /etc/haproxy/haproxy.cfg -p /var/run/haproxy.pid -sf $(cat /var/run/haproxy.pid); sleep 1; done",
      "check": "",
      "finish": "",
      "log": "exec chpst -u root logger -t $SERVICE_NAME -p local0.notice",
      "tags:": ["proxy"],
      "input": [ {"source": "", "port": "9999", "protocol": "tcp", "tags": [ "haproxy", "statistics" ]} ],
      "output": []
    }
   }
}